mixin img-wraper(data)
	table(align="left" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 100%;")
		tr
			td(align="center")
				table.table-important(align="center" border="0" cellpadding="0" cellspacing="0")
					tr
						td(align="left" style="color: #666666;" width=data.width)
							img(src=image_path+data.img alt=data.alt width=data.width height=data.height style="display: block; width: 100%; max-width: " + data.width + "px; height: auto; margin: 0; border: 0; padding: 0; outline: none;")

