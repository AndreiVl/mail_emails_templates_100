mixin icon-text(data)
	table(align="left" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 100%;")
		tr
			<!-- ID:BR TOUCH IMG -->
			td(align="left" height=data.td_height valign="top" width=data.td_width style="line-height: 0px;")
				img(src=image_path+data.img alt=data.alt width=data.img_width height=data.img_height style="display: block; width: 100%; max-width: " + data.img_width + "px; height: auto; margin: 0; border: 0; padding: 0; outline: none;")
			td(class!=attributes.class valign="middle" align="left")!=data.text


