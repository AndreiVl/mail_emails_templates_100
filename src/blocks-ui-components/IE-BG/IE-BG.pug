mixin IE-BG(data)
	- var bg = '<!--[if (gte mso 9)|(IE)]><v:rect xmlns:v="urn:schemas-microsoft-com:vml" fill="true" stroke="false" style="width: '+data.width+'px; height: '+data.height+'px;"><v:fill type="frame" src="'+image_path+data.img+'" color="'+data.color+'"/><v:textbox inset="0,0,0,0"><![endif]-->';

	if data.bg_1 == 1
		!=bg

