mixin creative-design(data)
	<!-- CREATIVE DESIGN STARTS -->
	table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%")
	tr
		td(align="center")
			+IE({width: table_width ,align: 'center', valign: 'top'})
			div(style="display: inline-block; width: 100%; max-width: " + table_width + "px; vertical-align: top;")
				<!-- ID:BG SECTION-2 -->
				table(align="center" bgcolor=bg_body border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: " + table_width + "px;")
					tr
						td(align="center" style="padding-left: " + body_pading_l + "px; padding-right: " + body_pading_r + "px;")
							+IE({width: body_width ,align: 'center', valign: 'top'})
							div(style="display: inline-block; width: 100%; max-width: " + body_width + "px; vertical-align: top;")
								table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: " + body_width + "px;")
									tr
										+td-margin({height: data.margin_top})
									tr
										td(align="left")
											table(align="left" border="0" cellpadding="0" cellspacing="0")
												tr
													<!-- ID:TXT TITLE -->
													td.h2(align=data.title_alignment)!=data.title
									tr
										+td-margin({height: data.title_margin})
							|!{IE_TABLE_END}
			|!{IE_TABLE_END}
	tr
		td(align="center")
			+column-2(data.column_2_grid)
	tr
		td(align="center")
			+IE({width: table_width ,align: 'center', valign: 'top'})
			div(style="display: inline-block; width: 100%; max-width: " + table_width + "px; vertical-align: top;")
				<!-- ID:BG SECTION-2 -->
				table(align="center" bgcolor=bg_body border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: " + table_width + "px;")
					tr
						td(align="center" style="padding-left: " + body_pading_l + "px; padding-right: " + body_pading_r + "px;")
							+IE({width: body_width ,align: 'center', valign: 'top'})
							div(style="display: inline-block; width: 100%; max-width: " + body_width + "px; vertical-align: top;")
								table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: " + body_width + "px;")
									tr
										td(align="center" style="padding: 5px 0;")
											table(align="left" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 100%;")
												tr
													td(align="left" valign="top" width=data.img_width height=data.img_height style="line-height: " + data.img_height + "px; font-size: 0;")
														+img({img_sm: data.img, alt: data.img_alt, width: data.img_width , height: data.img_height})
												tr
													+td-margin({height: data.img_margin})
												tr
													<!-- ID:TXT CONTENT -->
													td.text.text--sm(align=data.text_alignment)!=data.text
												tr
													+td-margin({height: data.text_margin})
												tr
													td(align=data.btn_alignment)
														<!-- ID:BTN ALL BUTTON -->
														+btn({link: data.btn_link, img: data.btn_img, width: data.btn_width, height: data.btn_height})
									tr
										+td-margin({height: data.margin_bottom})
							|!{IE_TABLE_END}
			|!{IE_TABLE_END}	
	<!-- CREATIVE DESIGN ENDS -->

