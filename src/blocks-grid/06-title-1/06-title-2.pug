mixin title-two(data)
	table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%")
		tr
			<!-- ID:TXT TITLE -->
			td.h1(align=data.alignment)!=data.title
		tr
			+td-margin({height: data.margin_title})
		tr
			<!-- ID:TXT TITLE SUBTITLE -->
			td.text.text--grey(align=data.alignment)!=data.subtitle

