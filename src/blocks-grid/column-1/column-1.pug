mixin column-1(data)
	+IE({width: table_width ,align: 'center', valign: 'top'})
	div(style="display: inline-block; width: 100%; max-width: " + table_width + "px; vertical-align: top;")
		<!-- ID:BG SECTION -->
		table(align="center" bgcolor=data.grid.bg_body border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: " + table_width + "px;")
			tr
				td(align="center" style="padding-left: " + body_pading_l + "px; padding-right: " + body_pading_r + "px;")
					+IE({width: body_width ,align: 'center', valign: 'top'})
					div(style="display: inline-block; width: 100%; max-width: " + body_width + "px; vertical-align: top;")
						table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: " + body_width + "px;")
							tr
								+td-margin({height: data.grid.margin_top})
							tr
								td(align="center")
									+#{data.center.name}(data.center.arg)
							tr
								+td-margin({height: data.grid.margin_bottom})
					|!{IE_TABLE_END}
	|!{IE_TABLE_END}

//- Вызов. Grid  параметры сетки. Блок center - передаем в name название миксина, в arg параметры мискина.
//- +column-1({
	grid: {
		bg_body: '',
		margin_top: '',
		margin_bottom: '',
		},
		center: {
		name: '',
		arg: {}
		}
	})