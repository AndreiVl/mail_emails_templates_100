mixin viewbrowser(data)
	<!-- VIEW IN BROWSER STARTS -->
	table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%")
		tr
			<!-- ID:TXT VIEW BROWSER -->
			td.text.text--sm(align="right")
				a.link(href=data.link_url)!=data.link
	<!-- VIEW IN BROWSER ENDS -->

