mixin text(data)
	table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%")
		- for (var i = 0; i < data.length; i++)
			tr
				if data[i]['type'] === 'text'
					<!-- ID:TXT -->
					td(align=data[i]['alignment'] class!=data[i]['class'])!=data[i]['text']

				if data[i]['type'] === 'margin'
					<!-- ID:MARGIN -->
					+td-margin({height: data[i]['margin']})

				if data[i]['type'] === 'divider'
					<!-- ID:MARGIN-DIVIDER -->
					+td-margin({height: data[i]['margin']})(class="divider")

				if data[i]['type'] === 'divider-bottom'
					<!-- ID:MARGIN-DIVIDER -->
					+td-margin({height: data[i]['margin']})(class="divider-bottom")

				if data[i]['type'] === 'dividerWidth'
					<!-- ID:MARGIN-DIVIDER-WIDTH -->
					td(align="center")
						+divider-width({margin: data[i]['margin'], width: width=data[i]['width']})

				if data[i]['type'] === 'content'
					td(align=data[i]['alignment'])
						+#{data[i].name}(data[i].arg)

