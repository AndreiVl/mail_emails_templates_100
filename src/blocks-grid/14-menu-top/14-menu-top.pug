mixin menu-top(data)
	table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%")
		tr
			- for (var i = 0; i < data.items.length; i++)
				td.h2(align="center" width="25%" style="padding: 4px 10px;")
					a.link.link--black(href!=data.items[i]['url'] target="_blank")!=data.items[i]['text']

