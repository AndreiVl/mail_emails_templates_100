mixin menu-top-2(data)
	table(align="center" bgcolor=data.bgcolor border="0" cellpadding="0" cellspacing="0" width="100%")
		tr
			td(align="center")
				+IE({col: 3, width: '500', width_col: data.items[0]['width'], align: 'center', valign: 'top'})
				- for (var i = data.items.length; i > 0; i--)
					- var j = data.items.length - i;

					+link_block({
						valign: data.items[j]['valign'],
						padding: data.items[j]['padding'],
						url: data.items[j]['url'],
						text: data.items[j]['text']
					})

					if i == 1 
						|!{IE_TABLE_END}
					else
						+IE({col_td: 2, width_col: data.items[j+1]['width'], align: 'center', valign: 'top'})

mixin link_block(data)
	div(style="display: inline-block; vertical-align: " + data.valign + ";")
		table.table-after-div(align="center" border="0" cellpadding="0" cellspacing="0" width="100%")
			tr
				td.h3.h3--uper(align="center" style="padding: " + data.padding +";")
					a.link.link--black(href=data.url target="_blank")!=data.text

